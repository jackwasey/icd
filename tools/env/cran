#!/usr/bin/env bash
#shellcheck disable=SC2034
##approximately the defaults --as-cran Full list is in https://cran.r-project.org/doc/manuals/r-release/R-ints.html#Tools
##_R_CHECK_COMPILATION_FLAGS_KNOWN_ here is the debian/ubuntu package standard in Renviron.site. Can potentially add more here for compiler flags I know are okay
#_R_CHECK_COMPILATION_FLAGS_KNOWN_='-Wformat -Werror=format-security -Wdate-time'
_R_CHECK_ALL_NON_ISO_C_=TRUE # probably in CRAN?
_R_CHECK_ALWAYS_LOG_VIGNETTE_OUTPUT_=TRUE
_R_CHECK_ASCII_DATA_=FALSE
_R_CHECK_AUTOCONF_=TRUE
_R_CHECK_BASHISMS_=true
_R_CHECK_CODE_ASSIGN_TO_GLOBALENV_=TRUE
_R_CHECK_CODE_ATTACH_=TRUE
_R_CHECK_CODE_DATA_INTO_GLOBALENV_=TRUE
_R_CHECK_CODE_USAGE_VIA_NAMESPACES_=TRUE
_R_CHECK_CODETOOLS_PROFILE_="" # CRAN does this?
_R_CHECK_COMPILATION_FLAGS_=TRUE
_R_CHECK_CONNECTIONS_LEFT_OPEN_=TRUE
_R_CHECK_CRAN_INCOMING_=FALSE # differs from CRAN
_R_CHECK_CRAN_INCOMING_REMOTE_=FALSE # differes from CRAN
_R_CHECK_DATALIST_=true
_R_CHECK_DEPRECATED_DEFUNCT_=TRUE
_R_CHECK_DOC_SIZES2_=TRUE
_R_CHECK_DOT_FIRSTLIB_=TRUE
_R_CHECK_EXECUTABLES_EXCLUSIONS_=FALSE
_R_CHECK_EXIT_ON_FIRST_ERROR_=TRUE
_R_CHECK_FUTURE_FILE_TIMESTAMPS_=TRUE
_R_CHECK_INSTALL_DEPENDS_=TRUE
_R_CHECK_LENGTH_1_CONDITION_="verbose,abort"
_R_CHECK_LENGTH_1_CONDITION_='package:_R_CHECK_PACKAGE_NAME_,[abort],verbose'
_R_CHECK_LENGTH_1_LOGIC2_="package:_R_CHECK_PACKAGE_NAME_,[abort],verbose"
_R_CHECK_NO_RECOMMENDED_=TRUE
_R_CHECK_NATIVE_ROUTINE_REGISTRATION_=TRUE
_R_CHECK_NO_STOP_ON_TEST_ERROR_=FALSE
_R_CHECK_ORPHANED_=true
_R_CHECK_OVERWRITE_REGISTERED_S3_METHODS_=TRUE
_R_CHECK_PACKAGES_USED_IN_TESTS_USE_SUBDIRS_=TRUE
_R_CHECK_PKG_SIZES_=FALSE
_R_CHECK_PRAGMAS_=TRUE
_R_CHECK_R_DEPENDS_=warn
_R_CHECK_R_ON_PATH_=TRUE
_R_CHECK_RD_EXAMPLES_T_AND_F_=FALSE # I think not set on CRAN
_R_CHECK_RD_LINE_WIDTHS_=TRUE
_R_CHECK_REPLACING_IMPORTS_=TRUE
_R_CHECK_S3_METHODS_NOT_REGISTERED_=TRUE
_R_CHECK_SCREEN_DEVICE_=stop
_R_CHECK_SERIALIZATION_=TRUE
_R_CHECK_SHLIB_OPENMP_FLAGS_=TRUE
_R_CHECK_SUGGESTS_ONLY_=TRUE
_R_CHECK_TESTS_NLINES_=13
_R_CHECK_THINGS_IN_CHECK_DIR_=true
_R_CHECK_THINGS_IN_TEMP_DIR_=TRUE
_R_CHECK_TIMINGS_=10
_R_CHECK_TOPLEVEL_FILES_=TRUE
_R_CHECK_USE_INSTALL_LOG_=TRUE
_R_CHECK_VC_DIRS_=TRUE
_R_CLASS_MATRIX_ARRARY_=true
_R_CHECK_VIGNETTES_NLINES_=25 # 10 for running, 25 for building, assume CRAN does this.
ICD_TEST_SLOW=FALSE
MAKEFLAGS=-j$(getconf _NPROCESSORS_ONLN)
